@model LivrariaControleEmprestimo.DATA.Models.Livro

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Livro</h4>
    <hr />
    <div class="card">
        <div class="card-header">Dados do livro</div>
        <div class="card-body row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.LivroNome)</label>
                    <input disabled class="form-group" value="@Html.DisplayFor(model => model.LivroNome)" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.LivroAutor)</label>
                    <input disabled class="form-group" value="@Html.DisplayFor(model => model.LivroAutor)" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.LivroEditora)</label>
                    <input disabled class="form-group" value="@Html.DisplayFor(model => model.LivroEditora)" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.LivroEdicao)</label>
                    <input disabled class="form-group" value="@Html.DisplayFor(model => model.LivroEdicao)" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.LivroAnoPublicacao)</label>
                    <input disabled class="form-group" value="@Html.DisplayFor(model => model.LivroAnoPublicacao)" />
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a class="btn btn bg-warning" asp-action="Index">Voltar</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
</div>
